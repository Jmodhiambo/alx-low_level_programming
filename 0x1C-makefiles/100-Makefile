CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc ${CFLAGS}
SRC = school.c main.c
OBJ = ${SRC:.c=.o}  # Automatically derive .o files from .c files
NAME = school

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}  # ^ represents all the prerequisites ie OBJ in this case

clean:
	$(RM) *~ ${NAME}

oclean:
	$(RM) ${OBJ}

fclean: clean oclean

# Force recompilation
re: oclean all
