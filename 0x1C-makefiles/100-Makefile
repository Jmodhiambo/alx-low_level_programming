CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc ${CFLAGS}
SRC = school.c main.c
OBJ = ${SRC:.c=.o}  # Automatically derive .o files from .c files
NAME = school

all: ${NAME}

${NAME}: ${OBJ}
	${CC} $^ -o $@  # ^ represents all the prerequisites ie OBJ in this case

clean:
	rm -f *~ ${NAME}

oclean:
	rm -f ${OBJ}

fclean: clean oclean

# Force recompilation
re: oclean all
